@page
@model project.Pages.EmployeeModel
@{
    ViewData["Title"] = "Employee Management";
    Layout = null;
}
<h2>Employee Management</h2>

<link rel="stylesheet" href="~/css/styleSheet.css">

<div class="container">
    <h2>Employee Management</h2>

    <form method="post" class="employee-form">
        <input type="hidden" asp-for="Employee.Emp_ID" />
        <div class="form-group">
            <label>Name:</label>
            <input type="text" asp-for="Employee.Name" required />
        </div>
        <div class="form-group">
            <label>Age:</label>
            <input type="number" asp-for="Employee.Age" required />
        </div>
        <div class="form-group">
            <label>Address:</label>
            <input type="text" asp-for="Employee.Address" required />
        </div>
        <div class="form-group">
            <label>Salary:</label>
            <input type="number" asp-for="Employee.Salary" step="0.01" required />
        </div>
        <div class="form-group">
            <label>Department:</label>
            <input type="text" asp-for="Employee.Department" required />
        </div>
        <div class="form-actions">
            <button type="submit" asp-page-handler="Create">Add</button>
            <button type="submit" asp-page-handler="Update">Update</button>
        </div>
    </form>

    <table class="employee-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model.Employees)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Address</td>
                    <td>@emp.Salary</td>
                    <td>@emp.Department</td>
                    <td>
                        <button type="button" onclick="location.href='?handler=Edit&id=@emp.Emp_ID'">Edit</button>
                        <button type="button" onclick="location.href='?handler=Delete&id=@emp.Emp_ID'">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
